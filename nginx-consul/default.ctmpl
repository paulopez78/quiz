http{
  {{$app := env "APP_NAME"}}

  upstream {{printf $app}} {
      least_conn;
      {{range service $app}}
      server {{.Address}}:{{.Port}} max_fails=3 fail_timeout=60 weight=1;
      {{end}}
  }

  server {
      listen 80;
      server_name {{$app}};

      location / {
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";
          proxy_http_version 1.1;
          proxy_pass http://{{printf $app}};
      }
  }
}
